<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource name="jdbc/my_collection"
              auth="Container"
              type="javax.sql.DataSource"
              testWhileIdle="true"
              testOnBorrow="true"
              testOnReturn="false"
              validationQuery="SELECT 1"
              validationInterval="30000"
              timeBetweenEvictionRunsMillis="30000"
              maxActive="100"
              minIdle="3"
              maxWait="1000"
              initialSize="5"
              removeAbandonedTimeout="60"
              removeAbandoned="true"
              logAbandoned="true"
              minEvictableIdleTimeMillis="30000"
              jmxEnabled="true"
              username="root"
              password="root"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://127.0.0.1:3306/my_collection?useUnicode=yes&amp;characterEncoding=UTF-8&amp;serverTimezone=UTC"/>
</Context>